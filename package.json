{
  "name": "intl-t",
  "description": "A Fully-Typed Node-Based i18n Translation Library",
  "version": "1.0.0-rc.5",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/nivandres/intl-t",
  "repository": {
    "url": "https://github.com/nivandres/intl-t",
    "type": "git"
  },
  "scripts": {
    "start": "bunx tsc --watch",
    "dev": "bun test --watch && bunx tsc --watch",
    "build": "bunx tsc",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "bunx prettier --write .",
    "lint": "bunx tsc --noEmit",
    "prepare": "bunx husky",
    "prepublishOnly": "bun run test && bun run build"
  },
  "keywords": [
    "translation",
    "i18n",
    "intl",
    "typescript",
    "react",
    "node",
    "nodes",
    "node-based",
    "translate",
    "formatting",
    "tree",
    "next",
    "next.js",
    "javascript",
    "browser"
  ],
  "author": "Ivan Vargas <nivnnd@gmail.com>",
  "license": "MIT",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "default": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./next": {
      "default": "./dist/next/index.js",
      "types": "./dist/next/index.d.ts"
    },
    "./link": {
      "default": "./dist/next/link.js",
      "types": "./dist/next/link.d.ts"
    },
    "./react": {
      "default": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./hooks": {
      "default": "./dist/react/hooks.js",
      "types": "./dist/react/hooks.d.ts"
    },
    "./locales": {
      "default": "./dist/locales/index.js",
      "types": "./dist/locales/index.d.ts"
    }
  },
  "bin": {
    "json-const": "scripts/json-const.js"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "@types/react": "^19",
    "husky": "^9",
    "next": "^15",
    "react": "^19"
  },
  "peerDependencies": {
    "next": ">=14",
    "react": ">=18 <20",
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "packageManager": "bun@1.2.0"
}
